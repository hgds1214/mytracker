<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/top_bluebg_for_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_bluebg_for_edit"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context="com.zeus.tec.ui.HomeActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@mipmap/white_arrow_left" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="数据上传"
                android:textColor="#ffffffff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_show_debug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="显示日志"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_get_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tv_show_debug"
                android:text="读取数据"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:visibility="gone"
                tools:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_low_power_tip"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#FFF6F2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_power"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/ic_power_low" />

            <TextView
                android:id="@+id/tv_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="低电量红色告警！"
                android:textColor="#ffff4c00"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_count_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00\n00:00:00"
                    android:singleLine="false"
                    android:maxLines="2"

                    android:textColor="#ffffffff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_count_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未登录"
                    android:textColor="#a0ffffff"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在运行"
                    android:textColor="#a0ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运行状态"
                    android:textColor="#a0ffffff"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_white"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="账号:"
                    android:textSize="18dp"
                    android:textColor="#000000" />
                <EditText
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:hint="请输入账号"
                    android:textColor="#000000"
                    android:text="whrsm"
                    android:textColorHint="#999999"
                    android:background="@drawable/bg_editbox_1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="密码:"
                    android:textSize="18dp"
                    android:textColor="#000000" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="请输入密码"
                    android:text="whrsm"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:background="@drawable/bg_editbox_1"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:background="@drawable/btn_collect_bg"
                    android:text="登录"
                    />

            </LinearLayout>

        </LinearLayout>


        <FrameLayout
            android:id="@+id/flStep"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="12dp">

            <View
                android:id="@+id/iv_line_1"
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_below="@id/iv_step_1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:background="#cacaca" />

            <View
                android:id="@+id/iv_line_2"
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_below="@id/iv_step_2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="75dp"
                android:background="#cacaca" />

            <View
                android:id="@+id/iv_line_25"
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_below="@id/iv_step_2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="125dp"
                android:background="#cacaca" />

            <View
                android:id="@+id/iv_line_3"
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_below="@id/iv_step_25"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="175dp"
                android:background="#cacaca" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.zeus.tec.ui.tracker.widget.StateIcon
                    android:id="@+id/iv_step_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/tv_step_1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="正在检测设备连接"
                    android:textColor="#222222"
                    android:textSize="15sp" />
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:indeterminate="false"

                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:max="100"
                    android:progress="0"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.zeus.tec.ui.tracker.widget.StateIcon
                    android:id="@+id/iv_step_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/iv_line_1" />

                <TextView
                    android:id="@+id/tv_step_2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="探头健康状态检测(有线模式)"
                    android:textColor="#ffcacaca"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="100dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.zeus.tec.ui.tracker.widget.StateIcon
                    android:id="@+id/iv_step_25"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/iv_line_2" />

                <TextView
                    android:id="@+id/tv_step_25_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/btn_blue_bg"
                    android:enabled="false"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:text="点击进入无线模式"
                    android:textColor="@color/btn_step_text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="150dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.zeus.tec.ui.tracker.widget.StateIcon
                    android:id="@+id/iv_step_3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/check_circle_disable" />

                <TextView
                    android:id="@+id/tv_step_3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_blue_bg"
                    android:enabled="false"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="点击清空探头数据"
                    android:textColor="@color/btn_step_text_color"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="200dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.zeus.tec.ui.tracker.widget.StateIcon
                    android:id="@+id/iv_step_4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/check_circle_disable" />

                <TextView
                    android:id="@+id/tv_step_4_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_blue_bg"
                    android:enabled="false"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="点击开始采集"
                    android:textColor="@color/btn_step_text_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/svCharts"
            android:layout_width="match_parent"
            android:layout_marginBottom="60dp"
            android:padding="12dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_devices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical"
                    tools:visibility="visible"
                    >
                    <TextView
                        android:id="@+id/tv_device_listTitle"
                        android:layout_width="match_parent"
                        android:text="设备列表"
                        android:background="@drawable/btn_collect_bg"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_height="30dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_not_device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="未搜索到设备"
                        android:textSize="20dp"
                        android:textColor="#ff0000"
                        android:layout_marginTop="50dp"
                        android:textStyle="bold"
                        android:gravity="center" />
                    <ListView
                        android:id="@+id/lv_devices"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ListView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_program_paramter"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_collect_bg"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="本地数据"
                        android:textColor="#ffffff"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/tv_point_record"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_finish_bg"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="测点记录"
                        android:textColor="#000000"
                        android:textSize="20dp"/>
                </LinearLayout>

                <ScrollView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_marginTop="35dp"
                    android:layout_height="wrap_content"
                    tools:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:id="@+id/lay_program_paramter"
                        android:layout_marginTop="0dp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_white">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="25dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="项目信息"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="#ff222222"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/tv_build_program"
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:visibility="gone"
                                android:text="新建项目"
                                android:layout_marginLeft="160dp"
                                android:textColor="#ffffff"
                                android:textSize="14dp"
                                android:textStyle="italic"
                                android:background="@drawable/btn_collect_bg"
                                android:gravity="center"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="10dp"
                            android:background="#E5E5E5"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="项目名称"

                                android:textColor="#ff606060"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_Project_Name"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColorHint="#55222222"
                                android:hint="项目名称缺失"
                                android:textColor="#ff222222"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="钻孔编号"
                                android:textColor="#ff606060"
                                android:textSize="14sp" />
                            <TextView
                                android:id="@+id/tv_CreatTime"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:hint="钻孔编号缺失"
                                android:textColorHint="#55222222"
                                android:textColor="#ff222222"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="设计方位角"
                                android:textColorHint="#55222222"
                                android:textColor="#ff606060"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/tv_pointDistance"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:hint="设计方位角缺失"
                                android:textColorHint="#55222222"
                                android:textColor="#ff222222"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="设计倾斜角"
                                android:textColor="#ff606060"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/tv_pointNumber"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:hint="设计倾斜角缺失"
                                android:textColorHint="#55222222"
                                android:textColor="#ff222222"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="设计孔深"
                                android:textColor="#ff606060"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/tv_OverLayNumber"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:hint="设计孔深缺失"
                                android:textColorHint="#55222222"
                                android:textColor="#ff222222"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="孔口坐标X"
                                android:textColor="#ff606060"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/tv_Delay"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:hint="孔口坐标X缺失"
                                android:textColorHint="#55222222"
                                android:textColor="#ff222222"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="孔口坐标Y"
                                android:textColor="#ff606060"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/tv_Amp11"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:hint="孔口坐标Y缺失"
                                android:textColorHint="#55222222"
                                android:textColor="#ff222222"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="孔口坐标Z"
                                android:textColor="#ff606060"
                                android:textSize="14sp"
                                />

                            <TextView
                                android:id="@+id/tv_Frenquence1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:hint="孔口坐标Z缺失"
                                android:text=""
                                android:textColor="#ff222222"
                                android:textColorHint="#55222222"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="罗盘校准误差"
                                android:textColor="#ff606060"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/tv_TIme_Space"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:hint="罗盘校准误差缺失"
                                android:textColorHint="#55222222"
                                android:textColor="#ff222222"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="预设航向"
                                android:textColor="#ff606060"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/tv_Gyro"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:hint="预设航向缺失"
                                android:textColorHint="#55222222"
                                android:textColor="#ff222222"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="激光水平误差"
                                android:textColor="#ff606060"
                                android:textSize="14sp"
                                />
                            <TextView
                                android:id="@+id/tv_isDownload"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:hint="激光水平误差缺失"
                                android:textColorHint="#55222222"
                                android:textColor="#ff222222"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

                <LinearLayout
                    android:id="@+id/layout_pointRecord"
                    android:visibility="visible"
                    android:layout_marginTop="35dp"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:visibility="visible"
                    android:background="@drawable/bg_white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="25dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数据列表"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="#ff222222"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            />
                        <TextView

                            android:id="@+id/tv_mul_update"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:text="批量上传"
                            android:layout_marginLeft="160dp"
                            android:textColor="#ffffff"
                            android:textSize="14dp"
                            android:textStyle="italic"
                            android:background="@drawable/btn_collect_bg"
                            android:gravity="center"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#E5E5E5"/>

                    <TextView
                        android:id="@+id/tv_not_record"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="当前无本地记录"
                        android:textColor="#ff0000"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="70dp"
                        android:visibility="gone" />

                    <ListView
                        android:visibility="visible"
                        android:id="@+id/list_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_border_606060"
                        tools:visibility="visible"

                        android:layout_marginTop="10dp" />


                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>

        <androidx.legacy.widget.Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_Data_Download"
            android:enabled="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="连接设备"
            android:layout_marginRight="3dp"
            android:textColor="@color/btn_finish_color"
            android:textSize="16sp"
            android:background="@drawable/btn_finish_bg"
            />


        <TextView
            android:id="@+id/start_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:text="保存数据"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:enabled="false"
            android:background="@drawable/btn_collect_bg"/>

        <TextView
            android:id="@+id/tv_merge"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="数据合成"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:enabled="true"
            android:background="@drawable/btn_collect_bg"/>
    </LinearLayout>


</FrameLayout>