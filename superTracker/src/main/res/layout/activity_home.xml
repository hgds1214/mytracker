<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    tools:context="com.zeus.tec.ui.HomeActivity"
    android:background="@drawable/top_bluebg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:text="仪器列表"
        android:textColor="#ffffffff"
        android:textSize="17sp"
        />
    <RelativeLayout
        android:id="@+id/rl_tracker"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:padding="10dp"
        android:background="@drawable/home_card_bg"
        >
        <FrameLayout
            android:id="@+id/fl_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_white"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/tracker_devicepng"
                />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/fl_icon"
            android:text="YZG6.4 矿用钻孔轨迹测量仪"
            android:textColor="#ff343434"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_0e65ee"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始工作"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/arrow_right"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tracker_leida"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:padding="10dp"
        android:background="@drawable/home_card_bg"
        >
        <FrameLayout
            android:id="@+id/fl_icon_leida"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_white">

            <ImageView
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/leida_device" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/fl_icon_leida"
            android:text="ZTR7.2 矿用钻孔雷达"
            android:textColor="#ff343434"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_0e65ee"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始工作"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/arrow_right"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_Directionfinder"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:padding="10dp"
        android:background="@drawable/home_card_bg"
        >
        <FrameLayout
            android:id="@+id/fl_icon_directionfinder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_white">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/icdevicepng" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/fl_icon_directionfinder"
            android:text="YHZ90(360) 矿用开孔定向仪"
            android:textColor="#ff343434"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_0e65ee"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始工作"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/arrow_right"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_EncoderWorking"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:padding="10dp"
        android:background="@drawable/home_card_bg"
        >
        <FrameLayout
            android:id="@+id/fl_icon_encoderWorking"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_white">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/fl_icon_encoderWorking"
            android:text="YHZ90(360) 矿用开孔定向仪"
            android:textColor="#ff343434"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_0e65ee"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始工作"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/arrow_right"
                />
        </LinearLayout>
    </RelativeLayout>
    <!--搜索设备列表-->
    <LinearLayout
        android:id="@+id/ll_device_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:padding="10dp"
        android:visibility="visible">
        <ListView
            android:id="@+id/lv_devices"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

</LinearLayout>