<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.zeus.tec.ui.HomeActivity"
    android:background="@drawable/top_bluebg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/white_arrow_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="罗盘校准"
            android:textColor="#ffffffff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_show_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="显示日志"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:visibility="gone"
            tools:visibility="visible"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_white">

        <LinearLayout
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="4dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff606060"
                    android:textSize="14sp"
                    android:text="上次校准时间: "
                    />
                <TextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/tvLastTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    tools:text="2022年10月01日 10时20分10秒"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff606060"
                    android:textSize="14sp"
                    android:text="上次校准地点: "
                    />
                <TextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/tvLastAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:textSize="15sp"
                    tools:text="--"
                    />
            </LinearLayout>

            <View android:layout_height="0.5dp" android:layout_width="match_parent"
                android:background="#e0e0e0"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textColor="#ff0000"
                android:textSize="14sp"
                android:text="等待设备连接"
                />

            <LinearLayout
                android:id="@+id/llStep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="16dp"
                    android:textColor="#0B36A3"
                    android:textSize="28sp"
                    android:text="S: "
                    />
                <TextView
                    android:id="@+id/tvStep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#0B36A3"
                    android:textSize="28sp"
                    android:text="--"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="16dp"
                android:textColor="#0B36A3"
                android:textSize="14sp"
                android:text=""
                android:visibility="gone"
                tools:visibility="visible"
                />
            <TextView
                android:id="@+id/tvResultDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:textColor="#888888"
                android:textSize="13sp"
                android:text=""
                android:visibility="gone"
                tools:visibility="visible"
                />
            <LinearLayout
                android:id="@+id/llAdjustInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        android:text="本次校准时间: "
                        />
                    <TextView
                        android:id="@+id/tvCurrentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#888888"
                        android:textSize="14sp"
                        android:layout_marginLeft="8dp"
                        tools:text="2022年10月01日 10时20分10秒"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本次校准地点: "
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_adjust_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dp"
                        android:hint="请输入"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:gravity="left|center_vertical"/>
                </LinearLayout>
            </LinearLayout>


            <View android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="#e0e0e0"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="取消"
            android:visibility="gone"
            android:textColor="@color/btn_finish_color"
            android:textSize="16sp"
            android:background="@drawable/btn_finish_bg"/>
        <TextView
            android:id="@+id/tv_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/btn_color"
            android:textSize="16sp"
            android:background="@drawable/btn_bg"
            android:visibility="gone"/>
        <TextView
            android:enabled="false"
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="开始罗盘校准"
            android:textColor="@color/btn_color"
            android:textSize="16sp"
            android:background="@drawable/btn_bg"/>
    </LinearLayout>
</LinearLayout>