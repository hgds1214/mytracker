<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="设备显示列表"
        android:textColor="#000000"
        android:textSize="18dp"
        android:gravity="center"
        android:background="@color/light_blue_400"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <RelativeLayout
                android:id="@+id/rl_tracker"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="10dp"
                android:background="@drawable/home_card_bg"
                >
                <FrameLayout
                    android:id="@+id/fl_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_white"
                    >
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/tracker_devicepng"
                        />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/fl_icon"
                    android:text="YZG6.4 矿用钻孔轨迹测量仪"
                    android:textColor="#ff343434"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_0e65ee"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true">
                    <ToggleButton
                        android:id="@+id/tracker_tog"
                        android:background="@color/light_blue_400"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_tracker_leida"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="10dp"
                android:background="@drawable/home_card_bg"
                >
                <FrameLayout
                    android:id="@+id/fl_icon_leida"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_white">

                    <ImageView
                        android:layout_width="83dp"
                        android:layout_height="83dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/leida_device" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/fl_icon_leida"
                    android:text="ZTR7.2 矿用钻孔雷达"
                    android:textColor="#ff343434"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_0e65ee"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true">
                    <ToggleButton
                        android:id="@+id/leida_tog"
                        android:background="@color/light_blue_400"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_Directionfinder"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="10dp"
                android:background="@drawable/home_card_bg"
                >
                <FrameLayout
                    android:id="@+id/fl_icon_directionfinder"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_white">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/icdevicepng" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/fl_icon_directionfinder"
                    android:text="YHZ90(360) 矿用开孔定向仪"
                    android:textColor="#ff343434"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_0e65ee"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true">
                    <ToggleButton
                        android:id="@+id/dirctionfinder_tog"
                        android:background="@color/light_blue_400"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_EncoderWorking"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="10dp"
                android:background="@drawable/home_card_bg"
                >
                <FrameLayout
                    android:id="@+id/fl_icon_encoderWorking"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_white">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/fl_icon_encoderWorking"
                    android:text="无线编码器"
                    android:textColor="#ff343434"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_0e65ee"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true">

                    <ToggleButton
                        android:id="@+id/wireless_tog"
                        android:background="@color/light_blue_400"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_MaoganWorking"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="10dp"
                android:background="@drawable/home_card_bg"
                >
                <FrameLayout
                    android:id="@+id/fl_icon_MaoganWorking"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_white">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/fl_icon_MaoganWorking"
                    android:text="D型锚杆仪"
                    android:textColor="#ff343434"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_0e65ee"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true">

                    <ToggleButton
                        android:id="@+id/Maogan_tog"
                        android:background="@color/light_blue_400"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_YcsWorking"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="10dp"
                android:background="@drawable/home_card_bg"
                >
                <FrameLayout
                    android:id="@+id/fl_icon_YcsWorking"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_white">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/fl_icon_YcsWorking"
                    android:text="Ycs400钻孔瞬变"
                    android:textColor="#ff343434"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_0e65ee"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true">

                    <ToggleButton
                        android:id="@+id/Ycs_tog"
                        android:background="@color/light_blue_400"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/exit_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@color/light_blue_400"
            android:text="确        认"
            android:textSize="16dp"
            />
    </LinearLayout>

</LinearLayout>