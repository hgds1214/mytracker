<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_white">
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:gravity="center_vertical"
            android:text="0001-矿区编号A008"
            android:textColor="#ff222222"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E5E5E5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="打点文件"
                        android:textColor="#ff606060"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_trd_file"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="打点文件缺失"
                        android:textColor="#ffff0000"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数据文件"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_data_file"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="数据文件缺失"
                        android:textColor="#ffff0000"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="zip文件"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_zip_file"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="压缩文件缺失"
                        android:textColor="#ffff0000"
                        android:textSize="14sp"
                        />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#87CEEB"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="X-YCS"
                        android:textColor="#ff606060"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/tv_x_ycs_file"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="未合成"
                        android:textColor="#ffff0000"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Y-YCS"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_y_ycs_file"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="未合成"
                        android:textColor="#ffff0000"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Z-YCS"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_z_ycs_file"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="未合成"
                        android:textColor="#ffff0000"
                        android:textSize="14sp"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E5E5E5"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_export"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="上传"
                android:textColor="#222222"
                android:textSize="14sp"
                android:visibility="gone"
                android:background="@drawable/bg_border_606060"
                />
            <TextView
                android:id="@+id/tv_share"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="分享"
                android:textColor="#0E65EE"
                android:textSize="14sp"
                android:background="@drawable/bg_border_0e65ee"
                />
            <TextView
                android:id="@+id/tv_view"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="数据查看"
                android:textColor="#0E65EE"
                android:textSize="14sp"
                android:background="@drawable/bg_border_0e65ee"
                />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/bg_0e65ee"
                android:gravity="center"
                android:text="数据删除"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_merge"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:visibility="visible"
                android:text="数据合成"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                android:background="@drawable/bg_0e65ee"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>