<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.zeus.tec.ui.HomeActivity"
    android:background="@drawable/top_bluebg_for_edit">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/white_arrow_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="编辑项目"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="10dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_toRightOf="@+id/iv_left"
            android:layout_toLeftOf="@+id/iv_right"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"/>
        <View
            android:id="@+id/v_left_line"
            android:layout_width="66dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/left_line_white" />
        <LinearLayout
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/v_left_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-10dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/active_edit"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingTop="6dp"
                android:text="项目信息"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                />
        </LinearLayout>
        <View
            android:id="@+id/v_right_line"
            android:layout_width="66dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/right_line_white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_right"
            android:layout_marginRight="-10dp"
            android:layout_toLeftOf="@+id/v_right_line"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/disable_info"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingTop="6dp"
                android:text="钻孔信息"
                android:textColor="#bbffffff"
                android:textSize="13sp"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_top"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业编号"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_Company"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:maxLength="32"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="矿区编号"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_mining_area"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:inputType="text"
                        android:maxLength="32"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作面名称"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_workspace"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:inputType="text"
                        android:maxLength="12"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="钻井编号"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_drill_hole_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:maxLength="12"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检测人员"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_detector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:maxLength="24"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="动态阈值"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_Dy_Threshold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:inputType="number"
                        android:maxLength="5"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="钻杆长度(CM)"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />

                    <EditText
                        android:id="@+id/edt_Pipe_Length"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:hint="请输入"
                        android:maxLength="5"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="钻孔深度(M)"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_Hole_Length"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>

            </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:background="@drawable/bg_0e65ee"/>

    </LinearLayout>
</LinearLayout>