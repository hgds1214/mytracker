<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_white"
    tools:text="512"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测点编号:"
            android:textSize="15dp"
            android:textColor="#000000"
            >

        </TextView>
        <TextView
            android:id="@+id/tv_pointNumber"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:text="1"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#ff0000"
            ></TextView>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="测点时间:"
            android:textSize="15dp"
            android:textColor="#000000"
            ></TextView>
        <TextView
            android:id="@+id/tv_point_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2023-12-12 00:00:00"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#40E0D0"
            ></TextView>

    </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:orientation="horizontal"
      >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="方向角:"
         android:textColor="#000000"
         ></TextView>
      <TextView
          android:id="@+id/tv_oritention_angle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="185.32"
          android:textStyle="bold"
          android:gravity="center"
          android:textSize="15dp"
          android:layout_marginLeft="2dp"
          android:textColor="#7EC0EE"
          ></TextView>
      <TextView

          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="倾斜角:"
          android:layout_marginLeft="5dp"
          android:textColor="#000000"
          ></TextView>
      <TextView
          android:id="@+id/tv_dip_angle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="185.32"
          android:textStyle="bold"
          android:gravity="center"
          android:textSize="15dp"
          android:layout_marginLeft="2dp"
          android:textColor="#7EC0EE"
          ></TextView>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="相对角:"
          android:layout_marginLeft="5dp"
          android:textColor="#000000"
          ></TextView>
      <TextView
          android:id="@+id/tv_relative_angle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="185.32"
          android:textStyle="bold"
          android:gravity="center"
          android:textSize="15dp"
          android:layout_marginLeft="2dp"
          android:textColor="#7EC0EE"
          ></TextView>
  </LinearLayout>

</LinearLayout>