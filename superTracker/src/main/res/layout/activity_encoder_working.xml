<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/top_bluebg_for_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_bluebg_for_edit"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context="com.zeus.tec.ui.HomeActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="32dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@mipmap/white_arrow_left" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="采集运行"
                android:textColor="#ffffffff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_show_debug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="显示日志"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_get_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tv_show_debug"
                android:text="读取数据"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                android:visibility="gone"
                tools:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_low_power_tip"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#FFF6F2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_power"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/ic_power_low" />

            <TextView
                android:id="@+id/tv_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="低电量红色告警！"
                android:textColor="#ffff4c00"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.zeus.tec.ui.widget.CountTimeTextView
                    android:id="@+id/tv_count_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="#ffffffff"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/tv_count_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运行时间"
                    android:textColor="#a0ffffff"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已停止"
                    android:textColor="#a0ffffff"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运行状态"
                    android:textColor="#a0ffffff"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_white"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tv_21"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="8"
                        android:text="245"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:textColorHint="#bbbbbb"
                        android:textColor="#333333"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="编码深度(nm)"
                        android:textColor="#ff606060"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ff222222"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="深度(m)"
                        android:textColor="#ff606060"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tv_frenquence_depth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="8"
                        android:text="50"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:textColorHint="#bbbbbb"
                        android:textColor="#333333"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="深度采样周期(ms)"
                        android:textColor="#ff606060"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/flStep"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="12dp">

            <View
                android:id="@+id/iv_line_1"
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_below="@id/iv_step_1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:background="#cacaca" />

            <View
                android:id="@+id/iv_line_2"
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_below="@id/iv_step_2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="75dp"
                android:background="#cacaca" />

            <View
                android:id="@+id/iv_line_25"
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_below="@id/iv_step_2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="125dp"
                android:background="#cacaca" />

            <View
                android:id="@+id/iv_line_3"
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_below="@id/iv_step_25"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="175dp"
                android:background="#cacaca" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.zeus.tec.ui.tracker.widget.StateIcon
                    android:id="@+id/iv_step_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/tv_step_1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="正在检测设备连接"
                    android:textColor="#222222"
                    android:textSize="15sp" />
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:indeterminate="false"

                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:max="100"
                    android:progress="0"
                    android:visibility="gone" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.zeus.tec.ui.tracker.widget.StateIcon
                    android:id="@+id/iv_step_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/iv_line_1" />
                <TextView
                    android:id="@+id/tv_step_2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="探头健康状态检测(有线模式)"
                    android:textColor="#ffcacaca"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="100dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.zeus.tec.ui.tracker.widget.StateIcon
                    android:id="@+id/iv_step_25"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/iv_line_2" />

                <TextView
                    android:id="@+id/tv_step_25_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/btn_blue_bg"
                    android:enabled="false"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:text="点击进入无线模式"
                    android:textColor="@color/btn_step_text_color"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="150dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.zeus.tec.ui.tracker.widget.StateIcon
                    android:id="@+id/iv_step_3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/check_circle_disable" />

                <TextView
                    android:id="@+id/tv_step_3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_blue_bg"
                    android:enabled="false"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="点击清空探头数据"
                    android:textColor="@color/btn_step_text_color"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="200dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.zeus.tec.ui.tracker.widget.StateIcon
                    android:id="@+id/iv_step_4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/check_circle_disable" />

                <TextView
                    android:id="@+id/tv_step_4_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_blue_bg"
                    android:enabled="false"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="点击开始采集"
                    android:textColor="@color/btn_step_text_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/svCharts"
            android:layout_width="match_parent"
            android:layout_marginBottom="60dp"
            android:padding="12dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_devices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="vertical"
                    tools:visibility="visible"
                    android:layout_marginTop="25dp"
                    >

                    <TextView
                        android:id="@+id/tv_not_device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="未搜索到设备"
                        android:textSize="20dp"
                        android:textColor="#ff0000"
                        android:layout_marginTop="50dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        ></TextView>
                    <ListView
                        android:id="@+id/lv_devices"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ListView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_program_paramter"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_collect_bg"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="配置编码深度"
                        android:textColor="#ffffff"
                        android:textSize="20dp"></TextView>
                    <TextView
                        android:id="@+id/tv_set_frenquence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_finish_bg"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="设置采样频率"
                        android:textColor="#000000"
                        android:textSize="20dp"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
        <androidx.legacy.widget.Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/llBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_binding_device"
            android:enabled="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="连接设备"
            android:layout_marginRight="3dp"
            android:textColor="@color/btn_finish_color"
            android:textSize="16sp"
            android:background="@drawable/btn_finish_bg"
            />
        <TextView
            android:id="@+id/start_button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_collect_bg"
            android:enabled="true"
            android:gravity="center"
            android:text="深度归零"
            android:textColor="#ffffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_begin_working"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="开始采集"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:enabled="true"
            android:background="@drawable/btn_collect_bg"/>
        <TextView
            android:id="@+id/tv_stop_working"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="停止采集"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:enabled="true"
            android:background="@drawable/btn_collect_bg"/>
    </LinearLayout>
</FrameLayout>