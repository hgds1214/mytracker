<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:layout_margin="2dp"
        android:padding="2dp"
        >
        <Button
            android:id="@+id/graymapshow_btn"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:background="#ffffee"
            android:drawableLeft="@mipmap/grayimage"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:text="灰度显示"
            android:textColor="#000000"
            android:textSize="20dp"
            tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />
        <Button
            android:id="@+id/sampleshow_btn"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="#ffffee"
            android:drawableLeft="@mipmap/sample"
            android:drawablePadding="0dp"
            android:paddingLeft="2dp"
            android:text="波列显示"
            android:textColor="#000000"
            android:textSize="20dp"
            tools:ignore="TouchTargetSizeCheck">
        </Button>
        <Button
            android:id="@+id/Sample_bt"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="#ffffee"
            android:text="参数设置"
            android:textColor="#000000"
            android:textSize="20dp"
            android:drawableLeft="@mipmap/setting2"
            android:drawablePadding="0dp"
            android:paddingLeft="2dp"
            android:layout_marginLeft="5dp"
            tools:ignore="TouchTargetSizeCheck">
        </Button>
        <Button
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="#ffffee"
            android:drawableLeft="@mipmap/list"
            android:drawablePadding="0dp"
            android:paddingLeft="2dp"
            android:text="数据整理"
            android:textColor="#000000"
            android:textSize="20dp"
            tools:ignore="TouchTargetSizeCheck">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000000"
        android:layout_marginBottom="2dp"
        >
        <com.zeus.tec.model.utils.DigitalTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="30dp"
            android:textColor="#ffff00"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dB"
            android:textSize="15dp"
            android:textColor="#ffff00"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#ffffff"
            >
            <com.github.chrisbanes.photoview.PhotoView
                android:visibility="visible"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#eeeeee"
                android:layout_marginBottom="0dp"
                android:id="@+id/sample_img"/>


            <ScrollView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:background="#cccccc"
                android:id="@+id/setting_ll"
                android:visibility="gone"
                >
                <LinearLayout
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="图像比例"
                            android:textColor="#000000"
                            android:textSize="17dp" />

                        <org.angmarch.views.NiceSpinner
                            android:background="#ff0000"
                            android:id="@+id/imageRatio_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            app:textTint="#000000" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="波列数量"
                            android:textColor="#000000"
                            android:textSize="17dp" />

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/sampleCount_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            app:textTint="#000000" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="显示高度"
                            android:textColor="#000000"
                            android:textSize="17dp" />

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/bmpHeight_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            app:textTint="#000000" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="滤波低频"
                            android:textSize="17dp"
                            android:textColor="#000000"
                            />
                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/nice_spinner_lowFreq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            app:textTint="#000000"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="滤波高频"
                            android:textColor="#000000"
                            android:textSize="17dp" />

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/nice_spinner_highFreq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            app:textTint="#000000"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="波列填充"
                            android:textSize="17dp"
                            android:textColor="#000000"
                            />
                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/nice_spinner_samplefill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            app:textTint="#000000"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="波形排列"
                            android:textSize="17dp"
                            android:textColor="#000000"
                            />
                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/nice_spinner_isLoose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            app:textTint="#000000"
                            tools:ignore="SpeakableTextPresentCheck"
                            />
                    </LinearLayout>
                    <Button
                        android:id="@+id/refresh_btv"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="刷新"
                        android:textSize="20dp"
                        />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

       <com.wang.avi.AVLoadingIndicatorView
           android:id="@+id/loading_avi"
           android:layout_width="60dp"
           android:layout_height="60dp"
           style="@style/AVLoadingIndicatorView"
           android:layout_gravity="center"
           app:indicatorName="BallSpinFadeLoaderIndicator"
           android:visibility="gone"
           app:indicatorColor="#5533ce" />

    </FrameLayout>

</LinearLayout>