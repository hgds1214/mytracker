<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.zeus.tec.ui.HomeActivity"
    android:background="@drawable/top_bluebg_for_edit">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/white_arrow_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="编辑项目"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_toRightOf="@+id/iv_left"
            android:layout_toLeftOf="@+id/iv_right"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"/>
        <View
            android:id="@+id/v_left_line"
            android:layout_width="66dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/left_line_white" />
        <LinearLayout
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/v_left_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-10dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/disable_project"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingTop="6dp"
                android:text="项目信息"
                android:textColor="#bbffffff"
                android:textSize="13sp"
                />
        </LinearLayout>
        <View
            android:id="@+id/v_right_line"
            android:layout_width="66dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/right_line_white"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_right"
            android:layout_marginRight="-10dp"
            android:layout_toLeftOf="@+id/v_right_line"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/active_info"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingTop="6dp"
                android:text="钻孔信息"
                android:textColor="#ffffff"
                android:textSize="13sp"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_top"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="孔口坐标X"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_hole_x"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="8"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:textColorHint="#bbbbbb"
                        android:textColor="#333333"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="孔口坐标Y"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_hole_y"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="8"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="孔口坐标Z"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_hole_z"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="8"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设计孔深(M)"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_jacket_length"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="5"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设计方位"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_design_direction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="5"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设计倾角"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_design_angle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLength="8"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:visibility="gone"
                    android:background="#E5E5E5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:visibility="gone"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="校准模式"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:id="@+id/edt_adjust_mode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:hint="请输入"
                        android:textColor="#333333"
                        android:textColorHint="#bbbbbb"
                        android:gravity="right|center_vertical"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="现场照片"
                        android:textColor="#ff606060"
                        android:textSize="14sp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="8dp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="167dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/bg_f3f3f3">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/iv_spot"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:riv_corner_radius="6dip"
                            android:scaleType="centerCrop"
                            android:visibility="gone"
                            />
                        <TextView
                            android:id="@+id/tv_capture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/camera"
                            android:layout_centerInParent="true"
                            android:drawablePadding="10dp"
                            android:text="点击拍摄照片"
                            android:textColor="#ff606060"
                            android:textSize="14sp"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5E5"/>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="#ff222222"
                android:textSize="16sp"
                android:background="@drawable/bg_cancel"
                />
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                android:background="@drawable/bg_0e65ee"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>