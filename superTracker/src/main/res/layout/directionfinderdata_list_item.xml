<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_white">
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:gravity="center_vertical"
            android:text="0001-矿区编号A008"
            android:textColor="#ff222222"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E5E5E5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钻孔编号"
                android:textColor="#ff606060"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_drill_hole_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="A008"
                android:textColor="#ff222222"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检测人"
                android:textColor="#ff606060"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_detector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="唐宋"
                android:textColor="#ff222222"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textColor="#ff606060"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2022-06-01 09:00:00"
                android:textColor="#ff222222"
                android:textSize="14sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E5E5E5"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_export"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="上传"
                android:textColor="#222222"
                android:textSize="14sp"
                android:background="@drawable/bg_border_606060"
                />
            <TextView
                android:id="@+id/tv_share"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:visibility="gone"
                android:gravity="center"
                android:text="分享"
                android:textColor="#0E65EE"
                android:textSize="14sp"
                android:background="@drawable/bg_border_0e65ee"
                />
            <TextView
                android:id="@+id/tv_view"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="数据查看"
                android:textColor="#0E65EE"
                android:textSize="14sp"
                android:background="@drawable/bg_border_0e65ee"
                />
            <TextView
                android:id="@+id/tv_merge"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="数据删除"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                android:background="@drawable/bg_0e65ee"
                />
            <TextView
                android:id="@+id/tv_continue"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="继续采集"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                android:background="@drawable/bg_0e65ee"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>